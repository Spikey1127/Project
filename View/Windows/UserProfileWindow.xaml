<Window x:Class="CalorieCalendarProg.View.Windows.UserProfileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:CalorieCalendarProg.ViewModel"
        Title="Felhasználói adatok" Height="400" Width="300"
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
        Background="{DynamicResource BackgroundBrush}"
        Foreground="{DynamicResource ForegroundBrush}">

    <StackPanel Margin="20">
        <TextBlock Text="Nem:" />
        <ComboBox SelectedValue="{Binding Gender}" SelectedValuePath="Content">
            <ComboBoxItem Content="Férfi" />
            <ComboBoxItem Content="Nő" />
        </ComboBox>

        <TextBlock Text="Életkor:" Margin="0,10,0,0"/>
        <TextBox Text="{Binding Age}" />

        <TextBlock Text="Magasság (cm):" Margin="0,10,0,0"/>
        <TextBox Text="{Binding HeightCm}" />

        <TextBlock Text="Testsúly (kg):" Margin="0,10,0,0"/>
        <TextBox Text="{Binding WeightKg}" />

        <Button Content="Mentés"
                Command="{Binding SaveCommand}"
                Margin="0,10,0,0"/>
        <CheckBox x:Name="DarkModeCheckBox"
          Content="Dark Mode"
          Checked="DarkModeCheckBox_Checked"
          Unchecked="DarkModeCheckBox_Unchecked"
          Margin="10"/>

    </StackPanel>
</Window>
