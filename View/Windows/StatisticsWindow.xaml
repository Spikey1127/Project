<Window x:Class="CalorieCalendarProg.View.Windows.StatisticsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Heti statisztika" Height="400" Width="500"
        Background="{DynamicResource BackgroundBrush}"
        Foreground="{DynamicResource ForegroundBrush}">

    <Grid Margin="10">
        <ListBox ItemsSource="{Binding DailyReports}" />
        <CheckBox x:Name="DarkModeCheckBox"
          Content="Dark Mode"
          Checked="DarkModeCheckBox_Checked"
          Unchecked="DarkModeCheckBox_Unchecked"
          Margin="10"/>

    </Grid>
</Window>
