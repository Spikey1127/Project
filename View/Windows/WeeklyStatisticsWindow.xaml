<Window x:Class="CalorieCalendarProg.View.Windows.WeeklyStatisticsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        Title="Heti statisztika" Height="400" Width="600"
        Background="{DynamicResource BackgroundBrush}"
        Foreground="{DynamicResource ForegroundBrush}">

    <Grid Margin="10">
        <lvc:CartesianChart Series="{Binding SeriesCollection}">
            <lvc:CartesianChart.AxisX>
                <lvc:Axis Title="Nap" Labels="{Binding Labels}" />
            </lvc:CartesianChart.AxisX>
            <lvc:CartesianChart.AxisY>
                <lvc:Axis Title="Kalória (kcal)" />
            </lvc:CartesianChart.AxisY>
        </lvc:CartesianChart>

        <CheckBox x:Name="DarkModeCheckBox"
          Content="Dark Mode"
          Checked="DarkModeCheckBox_Checked"
          Unchecked="DarkModeCheckBox_Unchecked"
          Margin="10"/>

    </Grid>
</Window>
